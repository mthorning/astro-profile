---
interface Props {
  current: typeof pages[number]
}
const { current } = Astro.props

const pages = ['home', 'about', 'contact'] as const;
---

<style>
  nav {
    position: fixed;
    background: #eee;
    padding: 1rem;
  }
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  li {
    display: inline-block;
    margin-right: 1rem;
  }
  a {
    color: #333;
    text-decoration: none;
  }

  .current {
    color: red;
  }
</style>

<nav>
  <ul>
    <li class:list={{ current }}>
      {pages.map(page => <a href={`#${page}`}>{page}</a>)}
    </li>
  </ul>
</nav>
